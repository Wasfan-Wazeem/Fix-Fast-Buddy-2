<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    >



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/homeCardUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/garage_card_userprofile"
            android:layout_marginStart="12dp"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/homeCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajith Bandara"
            android:textColor="@color/blue"
            android:textSize="23dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>




        <TextView
            android:id="@+id/homeCardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :  "
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="85dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/homeCardTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time :  "
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="115dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/homeCardService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service :  "
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="143dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
