<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    >



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/homeCardMechanicProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/garage_mechanicprofile"
            android:layout_marginStart="12dp"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/homeCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saman Perera"
            android:textColor="@color/blue"
            android:textSize="23dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/homeCardRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="110dp"
            android:textColor="@color/blue"
            android:text="4.9"
            android:layout_marginTop="57dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/homeCardratingstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/garage_star_shape"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/homeCardLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location :  "
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="85dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/homeCardProblem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem:  "
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="115dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/homeCardstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:  "
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="143dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
